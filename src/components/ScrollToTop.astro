<button
  id="scroll-to-top"
  class="fixed bottom-5 right-5 p-3 rounded-full bg-white dark:bg-dark-surface shadow-md dark:shadow-none border border-gray-100 dark:border-dark-border hover:scale-110 transition-all duration-300 opacity-0 invisible"
  aria-label="Volver arriba"
>
  <svg
    class="w-5 h-5 text-primary-600 dark:text-primary-500"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  const scrollButton = document.getElementById("scroll-to-top");

  const toggleScrollButton = () => {
    if (window.pageYOffset > 200) {
      scrollButton?.classList.remove("opacity-0", "invisible");
      scrollButton?.classList.add("opacity-100", "visible");
    } else {
      scrollButton?.classList.add("opacity-0", "invisible");
      scrollButton?.classList.remove("opacity-100", "visible");
    }
  };

  scrollButton?.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });

  window.addEventListener("scroll", toggleScrollButton);
</script>

