---
interface Service {
  title: string;
  description: string;
  icon: string;
}

const services: Service[] = [
  {
    title: "Diseño Publicitario",
    description: "Creamos materiales publicitarios impactantes que capturan la atención y transmiten tu mensaje de manera efectiva.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
    </svg>`,
  },
  {
    title: "Branding Empresarial",
    description: "Desarrollamos la identidad visual de tu marca, desde el logotipo hasta el manual de marca completo.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
    </svg>`,
  },
  {
    title: "Acrílicos Personalizados",
    description: "Fabricamos productos en acrílico de alta calidad, desde señalética hasta displays y exhibidores.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
    </svg>`,
  },
  {
    title: "Impresión Digital",
    description: "Ofrecemos servicios de impresión de alta calidad para todo tipo de materiales promocionales.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
    </svg>`,
  },
];
---

<section id="servicios" class="py-20">
  <div class="container">
    <h2 class="section-title text-center">Nuestros Servicios</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
      {
        services.map((service) => (
          <div class="service-card group">
            <div class="relative overflow-hidden rounded-2xl bg-white dark:bg-dark-surface border border-gray-100 dark:border-dark-border p-6 h-full transition-all duration-300 hover:shadow-lg dark:hover:shadow-primary-500/5">
              <!-- Decorative elements -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              <div class="absolute -inset-x-4 -inset-y-4 z-0 bg-gradient-to-br from-primary-500 to-primary-600 opacity-0 group-hover:opacity-10 transition-opacity duration-500 blur-2xl" />
              
              <!-- Card content -->
              <div class="relative z-10">
                <div class="service-icon-wrapper">
                  <div class="service-icon" set:html={service.icon} />
                </div>
                <h3 class="text-xl font-semibold mt-4 mb-2 text-gray-900 dark:text-dark-text group-hover:text-primary-600 dark:group-hover:text-primary-500 transition-colors">
                  {service.title}
                </h3>
                <p class="text-gray-600 dark:text-dark-muted">
                  {service.description}
                </p>
                
                <!-- Hover indicator -->
                <div class="absolute bottom-6 right-6 transform translate-x-8 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300">
                  <svg
                    class="w-6 h-6 text-primary-600 dark:text-primary-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .service-card {
    @apply transform transition-all duration-300 hover:-translate-y-1;
  }

  .service-icon-wrapper {
    @apply relative inline-flex p-3 rounded-xl bg-primary-50 dark:bg-dark-surface text-primary-600 dark:text-primary-500;
  }

  .service-icon-wrapper::before {
    content: '';
    @apply absolute inset-0 rounded-xl bg-primary-500 dark:bg-primary-600 opacity-0 scale-75 transition-all duration-300;
  }

  .service-card:hover .service-icon-wrapper::before {
    @apply opacity-10 scale-100;
  }

  .service-icon {
    @apply relative z-10 transition-transform duration-300 transform group-hover:scale-110;
  }
</style>