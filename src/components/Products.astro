---
const products = [
  {
    title: "Señalización Corporativa",
    image: "/images/products/signage.jpg",
    description: "Señalización moderna para espacios corporativos",
    category: "Avisos",
  },
  {
    title: "Displays de Acrílico",
    image: "/images/products/display.jpg",
    description: "Exhibidores elegantes para productos",
    category: "Acrílicos",
  },
  {
    title: "Letras Corpóreas",
    image: "/images/products/letters.jpg",
    description: "Letras 3D para fachadas e interiores",
    category: "Branding",
  },
];
---

<section class="py-20 bg-gray-50" id="productos">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">
      Nuestros Productos Destacados
    </h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        products.map((product) => (
          <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <img
              src={product.image}
              alt={product.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <span class="text-sm text-blue-600 font-semibold">
                {product.category}
              </span>
              <h3 class="text-xl font-semibold mt-2">{product.title}</h3>
              <p class="text-gray-600 mt-2">{product.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

